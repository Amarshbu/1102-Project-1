This program calculates the rates of car insurance 
based on age of user
*******************************************************************************/
#include <stdio.h>

/*int Age1 = 5000;
int Age2 = 3500;
int Age3 = 2800;
int Age4 = 1500;
*/

int main()
{
    int good;
    int Age2dis;
    int userage;
    
    printf("Hello User!\n");
    printf("Please enter your age:\n");
    scanf("%d", &userage);
    
        if (userage < 25);
        {
        printf("Your insurance is $5,000 per year until your 25th birthday. \n");
        }
        
        if (25 <= userage < 35);
        {
        printf("Your insurance is $3,500 per year until your 35th birthday. \n");
        }
        
    
    
        if (34 < userage < 50);
        {
        printf("Your insurance is $2,800 per year until your 50th birthday. \n");
        }
        
        if (userage > 49);
        {
        printf("Your insurance is $1,500 per year and will remain that rate. \n");
        }
    
    
    printf("Are you a good driver?\n -Enter 1 for YES\n -Enter 0 for NO\n");
    scanf("%d", &good);
        
        if (good == 1);
        {
        Age2dis = 3500 - (3500 * .02);
        printf("Your insurance is discounted at $%d per year until your 35th birthday. \n", Age2dis);
        }
    
        if (good == 0);
        {
        printf("Your insurance is still $3,500 per year until your 35th birthday. \n");
        }
        
    return 0;
}
